{
  "name": "clouseau-cli",
  "version": "0.1.0",
  "description": "Clouseau CLI - LLM interaction inspector",
  "type": "module",
  "bin": {
    "clou": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^4.4.0",
    "meow": "^13.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "ink-testing-library": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
